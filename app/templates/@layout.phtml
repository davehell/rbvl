<body {ifCurrent Default:*}class="homepage"{/if}>

<div id="header">
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <a href="{plink Default:}" class="brand" title="Úvodní stránka">
          <h1>„Region Beskydy“ volejbalová liga</h1>
          <p>Pojďme se bavit volejbalem v každém věku</p>
        </a>
      </div>
      <div class="col-md-2">
        {if isset($user)}
        <p id="logged-in">Uživatel: <strong>{$user->username}</strong></p>
        <ul>
          <li><a href="{link Uzivatele:}" title="Správa uživatelů">Uživatelé</a></li>
          <li><a href="{link Uzivatele:change}" title="Změna uživatelského jména a hesla">Změna hesla</a></li>
          <li><a href="{link Auth:logout}" title="Odhlášení z administrace">Odhlášení</a></li>
        </ul>
        {/if}
      </div>
    </div>
  </div>
</div>

<div id="menu" class="navbar navbar-default">
  <div class="container">
    <div class="row">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="navbar-collapse" id="menu-collapse">
        <ul class="nav navbar-nav">
          <li><a href="{plink Default:}" title="Informace o „Region Beskydy“ volejbalové lize">Úvod</a></li>
          <li><a href="{plink Aktuality:}" title="Aktuality z „Region Beskydy“ volejbalové ligy">Novinky</a></li>

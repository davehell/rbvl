          <li><a href="{plink Akce:}" title="Volejbalové turnaje a akce v Regionu Beskydy">Turnaje</a></li>
        </ul>
      </div>
    </div> <!-- .row -->
  </div> <!-- .container -->
</div> <!-- .navbar -->

<section class="section-title">
  <div class="overlay-bg"></div>
  <div class="container">
    <h1>{!$pageHeading}</h1>
  </div>
</section>

<div class="content-info">

  <div class="crumbs">
<!--
      <ul>
        <li><a href="index.html">Home</a></li>
        <li>/</li>
        <li>About Us</li>
      </ul>
-->
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {foreach $flashes as $flash}
        <p class="alert alert-{$flash->type}">{$flash->message}</p>
        {/foreach}
        {include $content}
      </div>
    </div> <!-- .row -->
  </div> <!-- .container -->

  <div class="section-wide">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="text-center">
            <a href="http://www.regionbeskydy.cz/" title="Region Beskydy"><img src="{$baseUri}img/rb_logo.png" height="100px" width="77px" alt="Region Beskydy" /></a>
          </div>
<span class="pull-right">
  <a href="{link Auth:login}" title="">administrace</a><br />
</span>
        </div>
      </div> <!-- .row -->
    </div> <!-- .container -->
  </div> <!-- .section-wide -->
</div> <!-- .content-info -->


